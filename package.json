{
  "name": "quantdesk",
  "version": "1.0.0",
  "description": "QuantDesk - Professional Perpetual Trading Platform",
  "private": true,
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin-dashboard && npm run build",
    "start": "docker-compose up -d",
    "start:dev": "npm run start:backend & npm run start:frontend & npm run start:admin",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm run dev",
    "start:admin": "cd admin-dashboard && npm run dev",
    "dev": "npm run start:dev",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:admin": "cd admin-dashboard && npm install",
    "install:data-ingestion": "cd data-ingestion && npm install",
    "install:mikey": "cd MIKEY-AI && npm install",
    "install:all": "npm run install:backend && npm run install:frontend && npm run install:admin && npm run install:data-ingestion && npm run install:mikey",
    "test": "npm run test:backend && npm run test:frontend && npm run test:admin",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm run build:check",
    "test:admin": "cd admin-dashboard && npm run build",
    "test:all": "npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:admin",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:admin": "cd admin-dashboard && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix && npm run lint:admin -- --fix",
    "type-check": "npm run type-check:backend && npm run type-check:frontend && npm run type-check:admin",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:admin": "cd admin-dashboard && npm run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "env:scan": "./scripts/env-scanner.sh",
    "env:validate": "node scripts/validate-env.js",
    "env:lint": "dotenv-linter",
    "env:check": "npm run env:scan && npm run env:validate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solana",
    "defi",
    "perpetual",
    "trading",
    "dex",
    "quantdesk"
  ],
  "author": "QuantDesk Team",
  "license": "MIT"
}
